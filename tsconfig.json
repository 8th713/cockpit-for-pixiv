{
  "compilerOptions": {
    // Basic Options
    "target": "es2019",
    "module": "esnext",
    // dafault es2017.full.d.ts
    // "lib": ["es2017", "dom"],
    "allowJs": true,
    "jsx": "react",
    "outDir": "docs",
    "rootDir": "packages",
    "noEmit": true,

    // Strict Type-Checking Options
    "strict": true,

    // Additional Checks
    "noUnusedLocals": true,
    "noImplicitReturns": true,

    // Module Resolution Options
    "moduleResolution": "node",
    "typeRoots": ["packages/types", "node_modules/@types"],
    "esModuleInterop": true,

    // Advanced
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false
  },
  "include": ["packages"]
}
