{
  "compilerOptions": {
    // Basic
    "target": "es2016",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "build/dist",
    "rootDir": "src",

    // Strict Type Checks
    "strict": true,

    // Additional Checks
    "noUnusedLocals": true,
    "noImplicitReturns": true,

    // Module Resolution
    "moduleResolution": "node",

    // Experimental
    "experimentalDecorators": true,

    // Advanced
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "_src",
    "docs",
    "docsrc",
    "webpack.config.js"
  ]
}
